{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],

    "paths": {
      "@/*": ["./src/*"]
    },

    "outDir": "./dist",
    "rootDir": "./src",

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
